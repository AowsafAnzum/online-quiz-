@model IEnumerable<Quiz>
@{
    ViewData["Title"] = "Quizzes";
}
<div class="container mt-4">
    <h2>Available Quizzes</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <div>
        @foreach (var q in Model)
        {
            <div class="card p-3 mb-3">
                <h5>@q.Title</h5>
                <p>Time limit: @q.TimeLimitMinutes minutes</p>
                <form asp-action="Start" method="post" class="form-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="quizId" value="@q.Id" />
                    <div class="mb-2">
                        <input name="studentNumber" class="form-control" placeholder="Student Number" />
                    </div>
                    <div class="mb-2">
                        <input name="studentName" class="form-control" placeholder="Student Name" />
                    </div>
                    <button class="btn btn-primary">Start</button>
                    <a class="btn btn-link" href="/Quiz/Report?quizId=@q.Id">Teacher Report</a>
                </form>
            </div>
        }
    </div>
</div>
